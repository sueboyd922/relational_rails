<%= link_to "All Players", "/players" %> <%= link_to "All Teams", "/teams" %>
<h3><%= @team.name %></h3>

<% @players.each do |player| %>
<div class="player-<%=player.id%>">
<p> <strong><%= player.name %></strong> : Position: <%= player.position %> Points: <%= player.points %> Active: <%= player.active %> <%= link_to "Edit", "/players/#{player.id}/edit" %></p>
</div>
<% end %>

<p>Find Players</p>
<%= form_with url: "/teams/#{@team.id}/players", method: :get, local: true do |form|  %>
<%= form.label :points_over, "Points Over" %>
<%= form.number_field :points_over, in: 0..1000, step: 1 %><br/><br/>
<%= form.submit "Search" %>
<% end %>

<%= link_to "Add New Player", "/teams/#{@team.id}/players/new" %>

<%= link_to "Alphabetize!", "/teams/#{@team.id}/players?alpha=yes", method: :get %>
